<h1>Add and Delete Families</h1>
<div id="add_family">
  <form id="new_family_form" class="add_delete_form" action="/families" method="post">
     <fieldset>
        <legend>
           Add a New Family
        </legend>
        <label>Membership ID#
        <select name="membership_id">
            {{#each memberships}}
                <option value="{{membership_id}}">
                    {{membership_id}}
                </option>
            {{/each}}
        </select></label>
        <label>
        <input type="submit" value="Add New Family:"></label>
     </fieldset>
  </form>
</div>
<div id="display_families" class="display_data">
  <table class="table table-striped table-bordered">
     <thead class="thead-dark">
        <tr>
           <th>
              Family ID#
           </th>
           <th>
              #People
           </th>
           <th>
              Membership ID#
           </th>
           <th>
              Bill
           </th>
           <th>
               Modify
           </th>
        </tr>
     </thead>
     <tbody>
         {{#each families}}
        <tr>
           <td>
              {{family_id}}
           </td>
           <td>
              {{num_people}}
           </td>
           <td>
              {{membership_id}}
           </td>
           <td>
              {{bill}}
           </td>
           <td>
               <button onclick="deleteFamily({{family_id}})">Delete</button>
           </td>
        </tr>
        {{/each}}
     </tbody>
  </table>
</div>
