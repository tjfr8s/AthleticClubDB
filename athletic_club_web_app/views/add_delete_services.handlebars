<body>
   <h1>Add and Delete Service</h1>
   <a href="./index.html" class="home_page_link">Home</a>
</div>
<div id="add_service">
   <form id="new_service_form" class="add_delete_form" action="/services" method="post">
      <fieldset>
         <legend>
            Add a New Service:
         </legend>
         <label>Name:
         <input type="text" name="service_name" size="30" maxlength="255"></label>
         <br>
         <lable>Cost:
         <input type="number" name="service_cost" size="30" max="255"></lable>
         <br>
         <label>Location ID#:
         <select name="location_id">
             {{#each locations}}
             <option value="{{location_id}}">
                 {{name}}
             </option>
             {{/each}}
         </select></label>
         <br>
         <label>
         <input type="submit" value="Add Service"></label>
      </fieldset>
   </form>
   <form id="delete_service_form" class="add_delete_form" action="" method="get">
      <fieldset>
         <legend>
            Delete a Service:
         </legend>
         <label>Service ID#
      <input type="number" name="delete_service_id" size="30" maxlength="11"></label>
      <input type="submit" value="Delete Service">
      </fieldset>
   </form>
</div>
   <div id="display_service" class="display_data">
      <a href="./add_delete_services.html">Update</a>
      <table>
         <thead>
            <tr>
               <th>
                  Service ID#
               </th>
               <th>
                  Name
               </th>
               <th>
                  Cost
               </th>
               <th>
                  Location ID#
               </th>
               <th>
                  Location Name
               </th>
            </tr>
         </thead>
         <tbody>
             {{#each services}}
            <tr>
               <td>
                  {{service_id}}
               </td>
               <td>
                  {{service_name}}
               </td>
               <td>
                  {{cost}}
               </td>
               <td>
                  {{location_id}}
               </td>
               <td>
                  {{location_name}}
               </td>
            </tr>
            {{/each}}
         </tbody>
      </table>
</body>
